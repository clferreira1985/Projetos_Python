        "def adicionar_item():\n",
        "  while True:\n",
        "      item = input(\"Qual item gostaria de adicionar à lista? \")\n",
        "\n",
        "      if item in itens:\n",
        "          print(f\"{item} já está na lista\")\n",
        "      else:\n",
        "          itens.append(item)\n",
        "          pergunta = input(\"Gostaria de adicionar mais algum item? Aperte 1 para 'Sim' e 2 para 'Não: \")\n",
        "          if pergunta == \"2\":\n",
        "              print(\"Muito obrigado. Segue a lista:\")\n",
        "              print(itens)\n",
        "              break\n",
        "\n",
        "def remover_item():\n",
        "    item = input(\"Qual item gostaria de remover? \")\n",
        "    if item in itens:\n",
        "        itens.remove(item)\n",
        "        print(\"Item removido\")\n",
        "    else:\n",
        "        print(\"Item não encontrado na lista\")"
